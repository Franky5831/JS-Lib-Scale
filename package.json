{
	"name": "button-scale-library",
	"version": "1.0.2",
	"description": "A JavaScript library for adding pixel-based scale animations to buttons",
	"type": "module",
	"main": "dist/main.js",
	"types": "dist/main.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rollup -c",
		"build:watch": "rollup -c --watch",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"prepublishOnly": "npm run build",
		"docs:prepare": "npm run build && cp -r dist docs/dist",
		"docs": "npm run docs:prepare && npx docsify-cli serve docs"
	},
	"keywords": [
		"button",
		"scale",
		"animation",
		"css",
		"transform",
		"typescript"
	],
	"author": "Francesco Ciannavei",
	"license": "MIT",
	"devDependencies": {
		"@rollup/plugin-typescript": "^12.3.0",
		"@testing-library/dom": "^10.4.0",
		"@types/jest": "^30.0.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"rollup": "^4.57.1",
		"rollup-plugin-dts": "^6.3.0",
		"ts-jest": "^29.4.6",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3"
	}
}
