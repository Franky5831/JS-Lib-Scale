{
  "compilerOptions": {
    "target": "ES2015",
    "module": "UMD",
    "lib": ["ES2015", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./library",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["library/**/*"],
  "exclude": ["node_modules", "dist", "tests", "coverage"]
}
